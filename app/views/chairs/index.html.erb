<% @chairs.each do |chair| %>
  <tr>
    <td><%= chair.name %></td>
    <td><%= chair.number %></td>
    <td><%= link_to 'Show', chair %></td>
    <td><%= link_to 'Edit', edit_chair_path(chair) %></td>
    <td><%= link_to 'Destroy', chair, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

