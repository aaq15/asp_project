<h1>Список предметов</h1>

<table>
  <tr>
    <th>Имя</th>
    <th></th>
    <th></th>
  </tr>

<% @subjects.each do |subject| %>
  <tr>
    <td><%= link_to subject.name, subject %></td>
    <td><%= link_to 'Редактировать', edit_subject_path(subject) %></td>
    <td><%= link_to 'Удалить', subject, :confirm => 'Вы уверены?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Добавить предмет', new_subject_path %>
