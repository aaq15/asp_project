<h1>Listing marks</h1>

<table>
  <tr>
    <th>Value</th>
    <th>Aspirant</th>
    <th>Subject</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @marks.each do |mark| %>
  <tr>
    <td><%= mark.value %></td>
    <td><%= mark.aspirant_id %></td>
    <td><%= mark.subject_id %></td>
    <td><%= link_to 'Show', mark %></td>
    <td><%= link_to 'Edit', edit_mark_path(mark) %></td>
    <td><%= link_to 'Destroy', mark, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

