<h1>Научные руководители</h1>

<table>
  <tr>
    <th>Фамилия Имя Отчество</th>
    <th>Звание</th>
    <th>Должность</th>
    <th>Начало работы</th>
    <th>Окончание работы</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scientmen.each do |scientman| %>
  <tr>
    <td><%= scientman.person.full_name %></td>
    <td><%= scientman.rank %></td>
    <td><%= scientman.job_title %></td>
    <td><%= scientman.start_date.strftime("%d.%m.%Y") %></td>
    <td><%= scientman.finish_date.strftime("%d.%m.%Y") %></td>
    <td><%= link_to 'Показать', scientman %></td>
    <td><%= link_to 'Редактировать', edit_scientman_path(scientman) %></td>
    <td><%= link_to 'Удалить', scientman, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

