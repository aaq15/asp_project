<% @scientmen.each do |scientman| %>
  <tr>
    <td><%= scientman.grade %></td>
    <td><%= scientman.job_title %></td>
    <td><%= scientman.rank %></td>
    <td><%= scientman.start_date %></td>
    <td><%= scientman.finish_date %></td>
    <td><%= scientman.person_id %></td>
    <td><%= link_to 'Show', scientman %></td>
    <td><%= link_to 'Edit', edit_scientman_path(scientman) %></td>
    <td><%= link_to 'Destroy', scientman, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

